<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Updateaccount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splashimgID"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:src="@drawable/logosplash" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="monospace"
            android:text="E-BUSINESS"
            android:textColor="#212121"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp"
            android:text="Enter your details to Register !"
            android:textColor="#212121" />
        <TextView
            android:id="@+id/keyID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#212121"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/textnameID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/backround"
            android:hint="User Name" />

        <EditText
            android:id="@+id/textcityID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/backround"
            android:hint="City" />

        <!-- <EditText
             android:id="@+id/textpasswordID"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:background="@drawable/backround"
             android:hint="Password"
             android:inputType="textWebPassword" />

         <EditText
             android:id="@+id/textconfirmpasswordID"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:background="@drawable/backround"
             android:hint="Confirm Password"
             android:inputType="textWebPassword" />-->

        <EditText
            android:id="@+id/textcellnoID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/backround"
            android:hint="Phone Number"
            android:inputType="number" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register As an ?"
            android:textColor="#FAFAFA"
            android:textSize="20sp" />

        <Button
            android:id="@+id/updatebuttonID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Update Record" />


    </LinearLayout>

</LinearLayout>